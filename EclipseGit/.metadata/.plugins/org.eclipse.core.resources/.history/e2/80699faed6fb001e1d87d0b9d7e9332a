package actividad4;

public class Actividad4 {
	 public static void main(String[] args) {
	        //inicializar tres asignaturas
	        Asignatura Mate = new Asignatura(1);
	        Asignatura Lengua = new Asignatura(2);
	        Asignatura Informatica = new Asignatura(3);

	        //inicializar un alumno con tres asignaturas
	        Alumno Shan = new Alumno(Mate, Lengua, Informatica);

	        //inicializa un profesor 
	        Profesor profesor = new Profesor();
	        profesor.ponerNotas(Shan);

	        
	        double media = profesor.calcularMedia(Shan);
	        System.out.println("La nota de mate del alumno es: " +  Mate);
	        System.out.println("La nota de lengua del alumno es: " +  Lengua);
	        System.out.println("La nota de ingles del alumno es: " +  Informatica);
	        System.out.println("La media del alumno es: " + String.format("%.2f", media));
	        
	        Alumno Shangfeng = new Alumno(Mate, Lengua, Informatica);
	 }
	 
}